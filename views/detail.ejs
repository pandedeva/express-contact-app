<div class="container">
  <div class="row">
    <div class="mt-5 col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">Data Contact tidak ada. <br /><a href="/contact" class="alert-link fw-normal">&laquo; Kembali ke daftar contact</a></div>
      <% } else {%>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title text-capitalize"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHp %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-success badge">Ubah</a>

          <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Yakin ingin menghapus?');">Hapus</a>

          <a href="/contact" class="card-link d-block mt-3">&laquo; Kembali ke daftar contact</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
